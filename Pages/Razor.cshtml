@page
@model Basic.Pages.RazorModel
@{
    ViewData["Title"] = "Razor";
}

<h1>Razor</h1>

<div id="info">
    <h2>Information</h2>

    @{
        var currentDate = DateTime.Now;
        var date = currentDate.ToString("yyyy-MM-dd hh:mm:ss");
        var day = currentDate.ToString("ddd");
    }

    <p id="dateStr">Datum/klockslag: <span id="date">@date</span></p>
    @{
        if (day == "mån" || day == "Mon")
        {
            <p>Idag är det måndag!</p>
        }
        else
        {
            <p>Idag är det inte måndag!</p>
        }
    }
</div>

<div id="courses">
    <h2>Kurser jag har läst</h2>

    @{
        var courses = new String[]
        {
        "DT057G, Webbutveckling I",
        "DT084G, Introduktion till programmering i JavaScript",
        "GD008G, Typografi och form för webb",
        "DT163G, Digital bildbehandling för webb",
        "DT003G, Databaser",
        "DT093G, Webbutveckling II",
        "DT162G, Javascriptbaserad webbutveckling",
        "DT152G, Webbdesign för CMS",
        "DT173G, Webbutveckling III",
        "IK060G, Projektledning"
            };
    }

    <ul>
        @foreach (var course in courses)
        {
            <li>@course</li>
        }
    </ul>
</div>